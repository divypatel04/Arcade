# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's in .gitignore

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Get these from: https://app.supabase.com/project/_/settings/api
REACT_NATIVE_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
REACT_NATIVE_SUPABASE_ANON_KEY=your-anon-key-here

# ==========================================
# REVENUECAT CONFIGURATION
# ==========================================
# Get these from: https://app.revenuecat.com/projects/
# iOS App-Specific Shared Secret
REVENUECAT_IOS_API_KEY=appl_xxxxxxxxxxxxxxxxxxxxxxxx

# Android Service Credentials
REVENUECAT_ANDROID_API_KEY=goog_xxxxxxxxxxxxxxxxxxxxxxxx

# ==========================================
# GOOGLE MOBILE ADS (ADMOB)
# ==========================================
# ðŸŽ¯ FEATURE FLAG: Set to 'false' to completely disable ads in the app
# When false, ads will not initialize and all ad-related UI will be hidden
# Change to 'true' once you have AdMob account approved and real ad unit IDs
ENABLE_ADS=false

# Get these from: https://apps.admob.com
# Format: ca-app-pub-XXXXXXXXXXXXXXXX/YYYYYYYYYY

# iOS Ad Unit IDs - Add real values here once you have AdMob account
ADMOB_IOS_REWARDED_AD_ID=ca-app-pub-XXXXXXXXXXXXXXXX/YYYYYYYYYY
ADMOB_IOS_BANNER_AD_ID=ca-app-pub-XXXXXXXXXXXXXXXX/YYYYYYYYYY

# Android Ad Unit IDs - Add real values here once you have AdMob account
ADMOB_ANDROID_REWARDED_AD_ID=ca-app-pub-XXXXXXXXXXXXXXXX/YYYYYYYYYY
ADMOB_ANDROID_BANNER_AD_ID=ca-app-pub-XXXXXXXXXXXXXXXX/YYYYYYYYYY

# ==========================================
# APP CONFIGURATION
# ==========================================
# Environment: development | staging | production
APP_ENV=development

# Enable debug logging (true in development, false in production)
DEBUG_LOGGING=true

# API Base URL (if you have a backend API)
# API_BASE_URL=https://api.example.com

# ==========================================
# FEATURE FLAGS
# ==========================================
# Note: ENABLE_ADS is configured above in the AdMob section
ENABLE_SUBSCRIPTIONS=true
ENABLE_ANALYTICS=true
